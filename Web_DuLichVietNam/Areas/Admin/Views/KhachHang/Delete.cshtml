
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Web_DuLichVietNam.EF
@model KHACHHANG
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Khách Hàng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang Chủ Admin</a></li>
            <li class="breadcrumb-item active">Quản Lý Khách Hàng</li>
        </ol>
        <div class="card mb-4">

            <div class="table-responsive p-3">
                <form method="post" class="booking-form">
                    <div class="row book-form">
                        <div class="form-input col-md-2 mt-3">
                            <label>Mã KH</label>
                            <input type="text" name="MaKH" value=@Model.MaKH>
                        </div>
                        <div class="form-input col-md-4 mt-3">
                            <label>Tên Khách Hàng</label>
                            <input type="text" name="TenKH" value=@Model.TenKH>
                        </div>
                        <div class="form-input col-md-4 mt-3">
                            <label>Ngày Sinh</label>
                            <input type="date" name="NgaySinh" value=@Model.NgaySinh>
                        </div>
                        <div class="form-input col-md-2  mt-3">
                            <label>GioiTinh</label>
                            <input type="number" name="GioiTinh" value=@Model.GioiTinh>
                        </div>
                        <div class="form-input col-md-4  mt-3">
                            <label>SDT</label>
                            <input type="text" name="SDT" value=@Model.SDT>
                        </div>
                        <div class="form-input col-md-8  mt-3">
                            <label>Email</label>
                            <input type="text" name="Email" value=@Model.Email>
                        </div>
                        <div class="form-input col-md-6  mt-3">
                            <label>Tên Đăng Nhập</label>
                            <input type="text" name="TenDN" value=@Model.TenDN>
                        </div>
                        <div class="form-input col-md-6  mt-3">
                            <label>Mật Khẩu</label>
                            <input type="text" name="MK" value="@Model.MK">
                        </div>
                        <div class="bottom-btn col-md-3 mt-3">
                            <button class="btn btn-style btn-primary w-100" type="submit">Xóa Khách Hàng</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>
