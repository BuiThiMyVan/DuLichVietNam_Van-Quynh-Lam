
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Web_DuLichVietNam.EF;
@model List<KHACHHANG>
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Khách Hàng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang Chủ Admin</a></li>
            <li class="breadcrumb-item active">Quản Lý Khách Hàng</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Danh Sách Khách Hàng
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <button onclick="location.href='@Url.Action("Create","KhachHang")'" class="btn btn-info mb-3">Thêm Khách Hàng</button>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Mã KH</th>
                                <th scope="col">Tên Khách Hàng</th>
                                <th scope="col">Giới Tính</th>
                                <th scope="col">SDT</th>
                                <th scope="col">Email</th>
                                <th scope="col"></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (KHACHHANG kh in Model)
                            {
                            <tr>
                                <th scope="row">@kh.MaKH</th>
                                <td>@kh.TenKH</td>
                                @if(@kh.GioiTinh == 1){
                                     <td>Nam</td>
                                } else if(kh.GioiTinh == 0) {
                                     <td>Nữ</td>  
                                }
                                <td>@kh.SDT</td>
                                <td>@kh.Email</td>
                                <td class="text-center">
                                    <a class="btn btn-danger" href="~/Admin/KhachHang/Delete/@kh.MaKH">Xóa</a>
                                    <a class="btn btn-info" href="~/Admin/KhachHang/Edit/@kh.MaKH">Cập Nhật</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

