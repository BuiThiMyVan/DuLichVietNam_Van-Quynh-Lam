
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Tour</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang Chủ Admin</a></li>
            <li class="breadcrumb-item active">Quản Lý Tour</li>
        </ol>
        <div class="card mb-4">

            <div class="table-responsive p-3">
                <form method="post" class="booking-form">
                    <div class="row book-form">
                        <div class="form-input col-md-2 mt-3">
                            <label>Mã Tour</label>
                            <input type="number" name="MaTour">
                        </div>
                        <div class="form-input col-md-10 mt-3">
                            <label>Tên tour</label>
                            <input type="text" name="TenTour">
                        </div>
                        <div class="form-input col-md-2 mt-3">
                            <label>Giá tour</label>
                            <input type="number" name="GiaTour">
                        </div>
                        <div class="form-input col-md-4  mt-3">
                            <label>Số lượng</label>
                            <input type="number" name="SoLuong">
                        </div>
                        <div class="form-input col-md-4  mt-3">
                            <label>Ngày khởi hành</label>
                            <input type="date" name="NgayKhoiHanh">
                        </div>
                        <div class="form-input col-md-2  mt-3">
                            <label>Thời gian</label>
                            <input type="number" name="ThoiGian">
                        </div>
                        <div class="form-input col-md-8  mt-3">
                            <label>Dịch vụ</label>
                            <input type="text" name="DichVu">
                        </div>
                        <div class="form-input col-md-4  mt-3">
                            <label>Hình ảnh</label>
                            <input type="file" name="HinhAnh">
                        </div>
                        <div class="form-input col-md-3  mt-3">
                            <label>Hành trình</label>
                            <input type="text" name="HanhTrinh">
                        </div>
                        <div class="form-input col-md-3  mt-3">
                            <label>Nơi xuất phát</label>
                            <input type="text" name="NoiXuatPhat">
                        </div>
                        <div class="form-input col-md-3  mt-3">
                            <label>Mã tỉnh thành</label>
                            <input type="number" name="MaTT">
                        </div>
                        <div class="form-input col-md-3  mt-3">
                            <label>Mã phương tiện</label>
                            <input type="number" name="MaPT">
                        </div>


                        <div class="bottom-btn col-md-2 mt-3">
                            <button class="btn btn-style btn-primary w-100" type="submit">Thêm</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>
