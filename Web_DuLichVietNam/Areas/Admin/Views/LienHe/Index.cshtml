
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Web_DuLichVietNam.EF;
@model List<LIENHE>
@{ 
    var chude = ViewBag.ChuDe as IEnumerable<CHUDE>;
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Hướng Dẫn Viên</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang Chủ Admin</a></li>
            <li class="breadcrumb-item active">Quản Lý Liên Hệ</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Danh Sách Liên Hệ
            </div>
            <div class="card-body">
                <div class="table-responsive">                 
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Tên Khách Hàng</th>
                                <th scope="col">Email</th>
                                <th scope="col">Chủ đề</th>
                                <th scope="col">Tin nhắn</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (LIENHE lh in Model)
                            {
                            <tr>
                                <th scope="row">@lh.HoTen</th>
                                <td>@lh.Email</td>
                                @foreach (CHUDE cd in chude)
                                {
                                    if (cd.MaCD == lh.MaCD)
                                    {
                                        <td>@cd.TenCD</td>
                                    }
                                }
                                <td>@lh.TinNhan</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

