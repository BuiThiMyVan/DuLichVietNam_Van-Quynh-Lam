@model Web_DuLichVietNam.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
    <form name="frmdangky" id="frmdangky" method="post" action="#">
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mx-4">
                        <div class="card-body p-4">
                            <h1>Đăng ký</h1>
                            <p class="text-muted">Tạo tài khoản</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-user-circle"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.TenDN, htmlAttributes: new { @class = "form-control", @placeholder = "Tên đăng nhập"})
                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger"})                               
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-unlock-alt"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.MK, htmlAttributes: new { @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-check-circle"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.XacNhanMK, htmlAttributes: new { @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                                @Html.ValidationMessageFor(model => model.XacNhanMK, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-file-signature"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.TenKH, htmlAttributes: new { @class = "form-control", @placeholder = "Họ Tên" })
                                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-table"></i></i>&nbsp;&nbsp;&nbsp;&nbsp;Ngày Sinh
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.NgaySinh, htmlAttributes: new { @class = "form-control", @type = "date", @placeholder = "Ngày Sinh" })
                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-venus-mars"></i>&nbsp;&nbsp;&nbsp;&nbsp;Giới Tính
                                    </span>
                                </div>
                                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem>
                                {
                                      new SelectListItem { Text = "Nam", Value = "1", Selected=true},
                                      new SelectListItem { Text = "Nữ", Value = "2"}
                                }, "Giới tính")
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.SDT, htmlAttributes: new { @class = "form-control", @placeholder = "Số Điện Thoại" })
                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-at"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <button class="btn btn-block btn-success" type="submit" name="">Tạo tài khoản</button>
                        </div>
                        <div class="card-footer p-4">
                            <div class="row">
                                <div class="col-12">
                                    <center>Nếu bạn đã có Tài khoản, xin mời Đăng nhập</center>
                                    <button type="submit" class="btn btn-primary form-control">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- End block content -->
</main>

