@model Web_DuLichVietNam.Models.DangNhapModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-4 offset-md-4 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4 border p-4">
            <h1 class="text-center mb-3" style="font-weight:bold">Đăng nhập</h1>
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="user">Tên tài khoản</label>
                    @Html.TextBoxFor(model => model.TenDN, new { @class = "form-control", @name = "TenDNA" })
                    @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    @Html.TextBoxFor(model => model.MK, new { @class = "form-control", @name = "MK", @type = "password" })
                    @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
                </div>
                <button id="btnLogin" type="submit" class="btn btn-primary">Đăng Nhập</button>
            }
        </div>
        <div class="col-12 col-sm-12 col-md-4 offset-md-4 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4 border pb-4 mt-4">
            <div class="row">
                <div class="col-12">
                    <center class="my-3">Nếu bạn chưa có Tài khoản, xin mời Đăng ký</center>
                    <btn class="btn btn-primary form-control" onclick="window.location.href='/User/Register'">Đăng ký</btn>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var listItems = document.getElementsByClassName("nav-item");
    for (let i = 0; i < listItems.length; i++) {
        listItems[i].classList.remove("active");
    }
    document.getElementById("register").classList.add('active');
</script>

